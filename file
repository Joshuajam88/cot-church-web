function validationForm(){
    var submit = document.getElementById('form').value;
    if(submit == ''){
        alert('Please put your address')
        return false;
    }
}

function validationForm(){
    var submit = document.getElementById('Email').value;
    if(submit == ''){
        alert('Please put your Email')
        return false;
    }
}

function validationForm(){
   var submit = document.getElementById('number').value;
    if (submit == ''){
        alert('Please put your contact')
        return false;
    }
}